<?xml version="1.0"?>
<project name="svn" basedir=".">
    <import file="init.xml"/>
    <taskdef resource="net/sf/antcontrib/antcontrib.properties" classpath="${dir.lib.tools}/ant-contrib-1.0b3.jar"/>
    <if>
        <os family="unix"/>
        <then>
            <path id="classpath.tools.svnant">
                <pathelement location="${dir.tools.svnant}/lib/svnant.jar"/>
                <pathelement location="${dir.tools.svnant}/lib/svnClientAdapter.jar"/>
            </path>
            <taskdef name="svn" classname="org.tigris.subversion.svnant.SvnTask"  classpathref="classpath.tools.svnant" /> 
            <typedef resource="org/tigris/subversion/svnant/svnantlib.xml" classpathref="classpath.tools.svnant" />
            <svnSetting svnkit="false" javahl="false" failonerror="false" id="svn.settings" />
        </then>
        <else>
            <path id="classpath.tools.svnant">
                <fileset dir="${dir.tools.svnant}">
                    <include name="**/*.jar"/>
                </fileset>
            </path>
            <taskdef name="svn" classname="org.tigris.subversion.svnant.SvnTask"  classpathref="classpath.tools.svnant" /> 
            <typedef resource="org/tigris/subversion/svnant/svnantlib.xml" classpathref="classpath.tools.svnant" />
            <svnSetting svnkit="true" javahl="false" failonerror="false" id="svn.settings" />
        </else>
    </if>
</project>
